# Dockerfile para tests e2e de QuanNex
FROM node:20-alpine

# Instalar dependencias del sistema
RUN apk add --no-cache curl

# Crear directorio de trabajo
WORKDIR /app

# Copiar archivos de configuración
COPY package*.json ./
COPY tsconfig.json ./
COPY vitest.config.ts ./

# Instalar dependencias
RUN npm ci

# Copiar código fuente
COPY src/ ./src/
COPY agents/ ./agents/
COPY scripts/ ./scripts/
COPY config/ ./config/
COPY .github/ ./.github/

# Crear directorio para reportes
RUN mkdir -p reports

# Exponer puerto para métricas
EXPOSE 3000

# Comando por defecto para tests e2e
CMD ["node", "scripts/e2e-test.mjs"]
