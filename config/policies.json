{
  "forbiddenApis": [
    "child_process.execSync",
    "fs.rmSync",
    "eval(",
    "Function(",
    "setTimeout(",
    "setInterval("
  ],
  "allowInPaths": {
    "child_process.exec": ["scripts/autofix.mjs", "scripts/e2e-*.mjs"],
    "child_process.execSync": ["scripts/autofix.mjs", "scripts/e2e-*.mjs", "scripts/anti-tamper.mjs"]
  },
  "maxEnvAccess": [
    "OPENAI_API_KEY",
    "ANTHROPIC_API_KEY",
    "GITHUB_TOKEN",
    "NPM_TOKEN"
  ],
  "noPlainSecrets": true,
  "requiredImports": {
    "src/**/*.{ts,tsx}": [
      "import { describe, it, expect } from 'vitest'"
    ]
  },
  "forbiddenPatterns": [
    "process.env\\.",
    "localStorage\\.",
    "sessionStorage\\.",
    "document\\.",
    "window\\."
  ],
  "maxFileSize": 1000,
  "maxFunctionComplexity": 10,
  "maxLinesPerFunction": 80
}
