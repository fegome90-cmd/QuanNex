#!/usr/bin/env node

/**
 * QuanNex TaskDB CLI Wrapper
 * Plan Maestro TaskDB - OLA 2: AntifrÃ¡gil
 * 
 * Wrapper para el CLI de informes con acceso directo
 */

import { fileURLToPath } from 'url';
import { join, dirname } from 'path';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

// Importar y ejecutar el CLI principal
import('../cli-reports.mjs').then(({ default: QuanNexReportsCLI }) => {
  const cli = new QuanNexReportsCLI();
  cli.run().catch(error => {
    console.error('Error fatal:', error.message);
    process.exit(1);
  });
}).catch(error => {
  console.error('Error cargando CLI:', error.message);
  process.exit(1);
});
