{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://startkit.local/schemas/agents/context.output.schema.json",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "schema_version": { "type": "string", "const": "1.0.0" },
    "agent_version": { "type": "string" },
    "context_bundle": { "type": "string" },
    "provenance": { "type": "array", "items": { "type": "string" } },
    "stats": {
      "type": "object",
      "properties": {
        "tokens_estimated": { "type": "integer" },
        "chunks": { "type": "integer" },
        "matched": { "type": "integer" },
        "truncated": { "type": "boolean" },
        "adjusted": { "type": "boolean" }
      },
      "required": ["tokens_estimated", "chunks", "matched", "truncated", "adjusted"],
      "additionalProperties": false
    },
    "trace": { "type": "array", "items": { "type": "string" } }
  },
  "required": ["schema_version", "agent_version", "context_bundle", "provenance", "stats"],
  "additionalProperties": false
}
