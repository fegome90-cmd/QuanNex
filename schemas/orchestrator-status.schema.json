{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OrchestratorStatus",
  "type": "object",
  "properties": {
    "run_id": { "type": "string" },
    "generated_at": { "type": "string", "format": "date-time" },
    "stages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "status": { "type": "string", "enum": ["pending", "running", "pass", "fail"] },
          "started_at": { "type": "string", "format": "date-time" },
          "completed_at": { "type": "string", "format": "date-time" },
          "artifacts": {
            "type": "array",
            "items": { "type": "string" }
          },
          "notes": { "type": "string" }
        },
        "required": ["name", "status"]
      }
    },
    "overall_status": { "type": "string", "enum": ["pass", "fail"] }
  },
  "required": ["run_id", "generated_at", "stages", "overall_status"]
}
